<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z0NSCWVSKK"></script>
    <script type="text/plain" data-category="analytics">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-Z0NSCWVSKK');
    </script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Modesto Software</title>
    <link href="/output.css" rel="stylesheet">
    <link href="/css/cookieconsent.css" rel="stylesheet">

    {% if css %}
      <link rel="stylesheet" href="{{css}}" />
    {% endif %}

    <link rel="icon" href="/favicon_for_lightmode.ico" media="(prefers-color-scheme: light)">
    <link rel="icon" href="/favicon_for_darkmode.ico" media="(prefers-color-scheme: dark)">
    <link rel="icon" href="/favicon_for_lightmode.ico">

    {% if js %}
      <script type="module" src="{{js}}"></script>
    {% endif %}

    <script type="module" src="/js/theme-toggle.js"></script>
  </head>
  <body class="flex flex-col min-h-screen">
    <script type="module" src="/js/cookieconsent-config.js"></script>
    <!-- Header -->
    <header class="bg-base-200">
      <div class="navbar pl-1 pr-4 md:px-6">

        <!-- Desktop menu -->
        <div class="navbar-start hidden md:flex flex-wrap items-center justify-between py-2">
          <div class="hidden md:flex flex-wrap items-center space-x-4">
            {% for menuItem in menuItems %}
              <a href="{{ menuItem.link }}" class="btn btn-sm sm:btn-md btn-primary">{{ menuItem.name }}</a>
            {% endfor %}
          </div>
        </div>

        <!-- Mobile menu -->
        <div class="navbar-start md:hidden">
          <div class="dropdown">
            <label tabindex="0" class="btn btn-square btn-ghost hover:bg-gray-500 hover:text-gray-100 transition duration-200 ease-in-out">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
              </svg>
            </label>
            <ul tabindex="0" class="menu dropdown-content mt-2 p-2 shadow bg-base-300 rounded-box w-52 border border-gray-300">
              {% for menuItem in menuItems %}
                <li>
                  <a href="{{ menuItem.link }}">{{ menuItem.name }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>

        <!-- Theme toggle and logo -->
        <div class="navbar-end hidden" id="theme-toggle-container">
          <div class="flex items-center space-x-3 md:space-x-6">
            <!-- Theme Toggle -->
            <label for="theme-toggle" class="sr-only">Toggle Theme</label>
            <input type="checkbox" class="toggle toggle-sm md:toggle-md" id="theme-toggle"/>

            <!-- Company Logo -->
            <a href="/" class="flex items-center">
              <img src="/images/logo_dark.png" alt="Company Logo" class="logo-dark w-10 md:w-14 h-auto"/>
              <img src="/images/logo_light.png" alt="Company Logo" class="logo-light w-10 md:w-14 h-auto"/>
            </a>
          </div>
        </div>

      </div>
    </header>

    <!-- Main Content Area -->
    <main class="flex-grow flex justify-center">
      <div class="w-10/12 md:w-8/12 pt-4 pb-6 md:pt-6 md:pb-8">
        <h1 class="page-title">{{ pageHeader }}</h1>
        {{ content | safe }}
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-base-200 p-4 text-center shadow-md">
      <p>Â© 2024 Modesto Software AB. All rights reserved.</p>
    </footer>

  </body>
</html>