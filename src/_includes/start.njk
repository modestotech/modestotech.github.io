---
title: "Home"
layout: base.njk
---

<h1 class="text-2xl text-center font-bold mb-3 md:mb-5">{{ header }}</h1>
<div class="flex flex-col md:flex-row items-center md:items-start space-x-0 md:space-x-5">
    <img
        src="{{ image }}"
        alt="{{ imageAlt }}"
        class= "w-10/12 md:w-2/5 h-auto mb-4
                rounded-md shadow-md
                md:rounded-lg md:shadow-lg
                order-2 md:order-1
                ">
    <div class="flex-1 text-center md:text-left mb-4 md:mb-0
                order-1 md:order-2">
        <p class="text-lg text-base-content">
            {{ description | safe }}
        </p>
    </div>
</div>